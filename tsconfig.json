{
  "env": "node",
   "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "strict": true,
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "lib",
      "declaration": true,
      "allowJs": true

  },
  "exclude": [
      "**/tests/*",
      "node_modules"
  ]
}